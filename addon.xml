		<import addon="script.module.elementtree" version="1.2.7"/>
	</requires>
	<extension
		point="xbmc.service"
		library="remotekodi.py"
		start="startup">
	</extension>
	<extension point="xbmc.python.script"
        	library="script.py">
		<provides>executable</provides>
